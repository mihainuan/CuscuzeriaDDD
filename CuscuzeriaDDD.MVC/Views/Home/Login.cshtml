@{
    Layout = null;
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>CuscuzAdmin</title>

    <!--Tell the browser to be responsive to the screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!--Bootstrap 4.3.1 -->
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css">

    <!--Font Awesome -->
    <link rel="stylesheet" href="css/font-awesome/fontawesome.min.css">

    <!--Ionicons -->
    <link rel="stylesheet" href="css/Ionicons/ionicons.min.css">

    <!--Theme Style -->
    <link rel="stylesheet" href="css/site.min.css">

    <!--iCheck -->
    <link rel="stylesheet" href="css/iCheck/blue.css">

    <!--Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
</head>
<body class="hold-transition login-page">
    <div class="login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="../Views/Home/Index.cshtml"><b>Admin</b>Cuscuzeria</a>
            </div>
            <!-- /.login-logo-->
            <div class="login-box-body">
                <p class="login-box-msg"> Sign in to restart your session</p>

                <form asp-controller="Home" asp-action="Login" method="post"></form>
                <div class="form-group has-feedback">
                    <input name="username" class="form-control" placeholder="E-mail">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="password" type="password" class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me?
                            </label>
                        </div>
                    </div>
                    <!-- /.col-->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-link">Sign In</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>